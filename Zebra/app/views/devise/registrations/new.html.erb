<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<form role="form">
  <div class="form-group">
    <div><label for="exampleInputEmail1"> <%= f.label :email, "Email Address" %></label>
    <%= f.email_field :email, :autofocus => true, :placeholder => "Enter Email" %>

    <div><label for="exampleInputPassword"> <%= f.label :password %></label>
    <%= f.password_field :password, :placeholder => "Password" %></div>

    <div><label for="exampleInputPassConfirmation"> <%= f.label :password_confirmation, "Password Confirmation" %></label>
    <%= f.password_field :password_confirmation, :placeholder => "Password" %></div>

    <div><label for="exampleInputFirst"> <%= f.label :firstName, "First Name" %></label>
    <%= f.text_field :firstName, :placeholder => "First Name" %></div>

    <div><label for="exampleInputLast"> <%= f.label :lastName, "Last Name" %></label>
    <%= f.text_field :lastName, :placeholder => "Last Name" %></div>

    <div><%= f.submit "Sign up" %></div>
  </div>
</form>
<% end %>