<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<form role = "form">
	<div class = "form-group">
      <div><label for="exampleInputEmail1"> <%= f.label :email, "Email Address" %></label>
	  <%= f.email_field :email, :autofocus => true, :placeholder => "Enter Email" %></div>

      <div><label for="exampleInputPassword"> <%= f.label :password %></label>
	  <%= f.password_field :password, :placeholder => "Password" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="checkbox">
    	  <label>
	        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    	  </label>
  		</div>
	  <% end -%>

	  <div><%= f.submit "Sign in" %></div>
	</div>
</form>
<% end %>

<%= render "devise/shared/links" %>